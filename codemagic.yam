workflows:
  android-debug:
    name: Android Debug APK
    max_build_duration: 60
    instance_type: linux_x2

    environment:
      java: 17

    scripts:
      - name: Grant execute permission
        script: chmod +x gradlew

      - name: Build debug APK
        script: ./gradlew assembleDebug

    artifacts:
      - app/build/outputs/apk/debug/*.apk
